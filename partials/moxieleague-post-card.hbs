<article class="moxieleague-post-card">
    <a class="post-card-image-link" href="{{url}}">
        <div class="moxieleague-post-card-image" style="background-image: url({{feature_image}})"></div>
    </a>
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                <span class="post-card-tags text-center">{{primary_tag.name}}</span>
                <h2 class="ml-post-card-title text-center">{{title}}</h2>
            </header>
        </a>
    </div>
</article>
